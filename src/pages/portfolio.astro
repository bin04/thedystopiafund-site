---
import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';

let tickerStats = [];

try {
  const { data } = await supabase
    .from('government_contracts')
    .select('matched_ticker, award_amount, dystopia_score')
    .not('matched_ticker', 'is', null);

  if (data) {
    const grouped = data.reduce((acc, contract) => {
      const ticker = contract.matched_ticker;
      if (!acc[ticker]) {
        acc[ticker] = {
          ticker,
          contracts: 0,
          totalValue: 0,
          avgScore: 0,
          scores: []
        };
      }
      acc[ticker].contracts++;
      acc[ticker].totalValue += contract.award_amount || 0;
      acc[ticker].scores.push(contract.dystopia_score || 0);
      return acc;
    }, {});

    tickerStats = Object.values(grouped)
      .map(stat => ({
        ...stat,
        avgScore: stat.scores.reduce((a, b) => a + b, 0) / stat.scores.length
      }))
      .sort((a, b) => b.totalValue - a.totalValue);
  }
} catch (error) {
  console.error('Error fetching portfolio data:', error);
}
---

<Layout title="Portfolio" description="The Dystopia Fund portfolio performance">
  <div class="container">
    <h1>üìä Portfolio Performance</h1>
    <p class="subtitle">Publicly Traded Companies Profiting from Dystopia</p>

    {tickerStats.length > 0 ? (
      <div class="portfolio-grid">
        {tickerStats.map((stat) => (
          <div class="card portfolio-card">
            <div class="ticker-header">
              <div class="ticker-symbol">{stat.ticker}</div>
              <div class="dystopia-badge">Score: {stat.avgScore.toFixed(0)}</div>
            </div>
            <div class="stats">
              <div class="stat-row">
                <span class="stat-label">Contracts Won</span>
                <span class="stat-value">{stat.contracts}</span>
              </div>
              <div class="stat-row">
                <span class="stat-label">Total Value</span>
                <span class="stat-value amount">${(stat.totalValue / 1000000).toFixed(2)}M</span>
              </div>
            </div>
          </div>
        ))}
      </div>
    ) : (
      <div class="card">
        <p>No portfolio data available yet. Waiting for contracts with matched tickers.</p>
      </div>
    )}

    <section class="disclaimer-section">
      <div class="card">
        <h2>‚ö†Ô∏è Investment Disclaimer</h2>
        <p>This is satire. The Dystopia Fund is not a real investment fund. We don't actually want you to profit from human suffering. But if you did, these companies would be a good start.</p>
      </div>
    </section>
  </div>
</Layout>

<style>
