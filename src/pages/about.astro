    max-width: 800px;
    margin: 0 auto;
  }

  .content h2 {
    margin-top: 2rem;
    color: var(--accent-red);
    font-size: 1.5rem;
  }

  .content p {
    margin: 1rem 0;
    color: var(--text-secondary);
    line-height: 1.8;
  }

  .content ul {
    margin: 1rem 0 1rem 2rem;
    color: var(--text-secondary);
  }

  .content li {
    margin: 0.5rem 0;
  }

  .content a {
    color: var(--accent-orange);
    text-decoration: none;
  }

  .content a:hover {
    text-decoration: underline;
  }
</style>