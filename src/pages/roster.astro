    <div class="space-y-6">
      {tiers.map((tier, tierIndex) => (
        <div class="bg-gray-900 rounded-lg p-4">
          <h2 class="text-white text-xl font-bold mb-3">Tier {tierIndex + 1}: {tier.name}</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
            {tier.stocks.map(stock => (
              <div class="bg-gray-800 rounded p-3">
                <div class="flex items-start justify-between mb-1">
                  <span class="text-green-400 font-mono font-bold">{stock.ticker}</span>
                  <span class="text-gray-400 text-xs">{tier.name}</span>
                </div>
                <div class="text-white font-semibold text-sm mb-1">{stock.name}</div>
                <div class="text-gray-400 text-xs">{stock.description}</div>
              </div>
            ))}
